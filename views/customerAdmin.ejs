<!DOCTYPE html>
<html lang="en">

<head>
    <title>Admin | Customer</title>

    <%- include('adminheader'); -%>
</head>

<body class="hold-transition sidebar-mini layout-fixed layout-navbar-fixed layout-footer-fixed">
    <div class="wrapper">
        <!-- Navbar -->
        <div id="sidebar">
            <%- include('adminsidebar'); -%>
        </div>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper p-4">
            <h3>Customer List</h3>
            <div class="card card-solid">
                <div class="card-body pb-0">
                    <div id="app">
                        <table id="myTable" v-if="Customers" class="table">
                            <thead class="font-weight-bold table-info">
                                <tr>
                                    <th>#</th>
                                    <th>Name</th>
                                    <th>Passport</th>
                                    <!-- <th>Representative</th> -->
                                    <th class="text-right">...</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr v-for="(item,index) in Customers">
                                    <td v-text="item.ID"></td>
                                    <td v-text="item.Name"></td>
                                    <td>{{item.Passport}}</td>
                                    <!-- <td>{{item.Representative.Name}}</td> -->
                                    <td class="text-right"><button @click="updateCus(item.ID,index)" type="button"
                                            class="btn btn-warning"><i class="fa fa-edit"></i> Edit</button> </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>

        </div>
        <footer>
            <%- include('adminfooter'); -%>
        </footer>
    </div>

    <!-- ./wrapper -->

    <!-- PAGE SCRIPTS -->
    <script src="../dist/js/pages/dashboard2.js"></script>

    <script src="../dist/vue.js"></script>
    <script src="../dist/vue-router.js"></script>
    <script src="../dist/axios.js"></script>
    <script type="module" src="../dist/@CustomerVue/cusVue.js"></script>
    <script src="../dist/sweetalert2.all.min.js"></script>
    <!-- Language dependant libraries -->
</body>

</html>